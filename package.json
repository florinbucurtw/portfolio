{
  "name": "portfolio-automation",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Portfolio web application with database",
  "main": "server.js",
  "scripts": {
    "start": "node serve.mjs",
    "dev": "nodemon serve.mjs",
    "db:clone": "node scripts/clone-db.mjs",
    "start:test": "PORT=3001 DB_PATH=portfolio.test.db node serve.mjs",
    "firestore:export": "node scripts/firestore-export.mjs",
    "firestore:import:emulator": "node scripts/firestore-import-emulator.mjs",
    "export": "node export-db.js",
    "export:db": "node export-db.js",
    "import:emulator": "node scripts/import-emulator.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "vitest run tests/api",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "firebase-admin": "^12.6.0",
    "eslint": "^9.12.0",
    "prettier": "^3.2.5",
    "nodemon": "^3.0.2",
    "typescript": "^5.6.3",
    "undici": "^6.19.8",
    "vitest": "^4.0.14"
  }
}
